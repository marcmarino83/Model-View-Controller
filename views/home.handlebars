{{!-- Add your homepage content here --}}
<h1>Welcome to the Tech Blog</h1>
{{#if posts.length}}
  {{#each posts}}
    <div>
      <h2>{{this.title}}</h2>
      <p>{{this.content}}</p>
      <p>Posted by {{this.username}} on {{this.createdAt}}</p>
    </div>
  {{/each}}
{{else}}
  <p>No posts yet!</p>
{{/if}}
